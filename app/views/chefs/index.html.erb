<%= render 'shared/page_title', title: 'All Chefs' %>
<ul class="nav nav-tabs">
  <li class="nav-item">
    <%= link_to "Recipes", recipes_path, class: "nav-link" %>
  </li>
  <li class="nav nav-item">
    <%= link_to "Chefs", chefs_path, class: "nav-link active" %>
  </li>
</ul>

<div class="row">
  <div class="col-md-4 col-md-offset-4 center">
    <%= will_paginate %>
  </div>
</div>

<% @chefs.each do |chef| %>
  <div class="row">
    <div class="col-md-4 col-md-offset-4 center">
      <%= link_to gravatar_for(chef, size:200), chef_path(chef) %>
      <p>
        <h5>Chef name: <%= chef.chefname %></h5>
      </p>
    </div>
  </div>
<% end %>