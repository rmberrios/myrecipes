<%= render 'shared/page_title', title: 'All Recipes' %>
<% @recipes.each do |recipe| %>
  <div class="row">
    <div class="col-md-2">
      <section class="chef-info center">
        <%= gravatar_for recipe.chef size: 100%>
        <h5>Chef name: <%= recipe.chef.chefname%></h5>
      </section>
    </div>
    <div class="col-md-6">
      <div class="card">
        <h4 class="card-header">
           <%= link_to recipe.name.upcase, recipe_path(recipe)%></h4>
        <div class="card-block">
          <p class="card-text"><%= recipe.summary %>
            
          </p>  
        </div>
        <div class="card-footer text-muted">
          <span>
              <small>updated <%= time_ago_in_words(recipe.created_at) %> ago</small>
            </span>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <%= image_tag(recipe.picture.url, size: "250x150", class:"gravatar") if recipe.picture? %>
    </div>
  </div>
  <hr/>
<% end %>